// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- TABELAS ---

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // <--- NOVO CAMPO (Obrigatório)
  avatarUrl String?  
  role      String   @default("FATURADOR")
  status    String   @default("OFFLINE")
  
  // Relacionamentos...
  activeTickets Driver[] @relation("Handling") 
  auditLogs     AuditLog[] 

  messages      Message[]
  
  createdAt DateTime @default(now())
}

model Driver {
  id           Int      @id @default(autoincrement()) 
  name         String
  licensePlate String   
  
  // SEPARAÇÃO REALIZADA:
  type         String   // Frota, Agregado, Terceiro (Define o Checklist)
  group        String   @default("VERMELHO") // Vermelho, Azul, Verde (Define a Cor)
  
  status       String   @default("TODO") 
  arrivalTime  DateTime 

  currentStep  Int      @default(0) 
  failedStep   String?  
  pendingReason String? 
  
  currentHandlerId String?
  currentHandler   User?   @relation("Handling", fields: [currentHandlerId], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  auditLogs    AuditLog[]
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String   
  details   String?  
  timestamp DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  driverId  Int
  driver    Driver   @relation(fields: [driverId], references: [id])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}