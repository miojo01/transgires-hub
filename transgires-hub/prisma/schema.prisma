// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- TABELAS ---

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // <--- NOVO CAMPO (ObrigatÃ³rio)
  avatarUrl String?  
  role      String   @default("FATURADOR")
  status    String   @default("OFFLINE")
  
  // Relacionamentos...
  activeTickets Driver[] @relation("Handling") 
  auditLogs     AuditLog[] 

  messages      Message[]
  
  createdAt DateTime @default(now())
  finishedDrivers Driver[] @relation("FinishedBy")
}

model Driver {
  id           Int      @id @default(autoincrement()) 
  name         String
  licensePlate String   
  type         String   
  group        String   
  
  romaneio     String?  // Ex: "ROM-998877"

  finishedById String? 
  finishedBy   User?   @relation("FinishedBy", fields: [finishedById], references: [id])

  status       String   @default("TODO") 
  arrivalTime  DateTime 

  currentStep  Int      @default(0) 
  failedStep   String?  
  pendingReason String? 
  
  currentHandlerId String?
  currentHandler   User?   @relation("Handling", fields: [currentHandlerId], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  auditLogs    AuditLog[]
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String   
  details   String?  
  timestamp DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  driverId  Int
  driver    Driver   @relation(fields: [driverId], references: [id])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

// Adicione isso no final do arquivo
model SavedDriver {
  id           Int      @id @default(autoincrement())
  name         String
  licensePlate String   @unique // <--- IMPORTANTE: Impede duplicidade
  type         String   // Frota, Agregado, Terceiro
  group        String   // Cor
  phone        String?  // Opcional: Telefone
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

